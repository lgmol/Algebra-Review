            $disc = Compute(1+8*$a);
            $discroot=sqrt($disc);
            $root1 = Fraction("(1+sqrt($disc))","4");
            $root2 = Fraction("(1-sqrt($disc))","4");
            $ans = List($root1,$root2);

            Context("LimitedPolynomial");

            $x = "x";
            $quad = Formula("2*$x**2-$x");
            $quad2 = Formula("2*$x**2-$x-$a");

          </pg-code>

